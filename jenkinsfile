pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Construyendo el proyecto...'
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas unitarias...'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Ejecutando análisis estático (simulado)...'
                sh 'echo "Bandit Security Scan Report" && echo "No vulnerabilities found in basic scan"'
            }
        }
    }
}
